<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <!--部分テンプレート-->
      <%= render 'users/info', user: @user, book: @book %>
      <!--ここまで-->
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |b| %>
              <tr>
                <td>
                  <%= attachment_image_tag b, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
                </td>
                <td>
                  <%= b.name %>
                </td>
                <td>
                  <%= link_to "Show", user_path(b.id) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>