<main>
  <p id="notice"><%= flash[:success] %></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <!--部分テンプレート-->
      <%= render 'users/info', user: @user, book: @book %>
      <!--ここまで-->
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |b| %>
              <tr>
                <td>
                  <%= link_to book_path(b.id) do %>
                    <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg"  %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(b.id) do %>
                    <%= b.title %>
                  <% end %>
                </td>
                <td><%= b.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>