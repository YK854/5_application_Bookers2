<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <!--部分テンプレート-->
      <%= render 'users/info', user: @user, book: @book %>
      <!--ここまで-->

        <div class="col-md-8 offset-md-1">
        	<h2>Book detail</h2>
          <table class="table">
            <tbody>
              <% @user.books.each do |b| %>
                <tr>
                  <td>
                    <%= link_to root_path do %>
                      <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
                      <br/><%= b.title %>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to root_path do %>
                      <%= b.title %>
                    <% end %>
                  </td>
                  <td>
                    <%= b.body %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

    </div>
  </div>
</main>