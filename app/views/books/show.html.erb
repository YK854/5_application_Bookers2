<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <!--部分テンプレート-->
      <%= render 'users/info', user: @user, book: @book %>
      <!--ここまで-->

        <div class="col-md-8 offset-md-1">
        	<h2>Book detail</h2>
          <table class="table">
            <tbody>
                <tr>
                  <td>
                    <%= link_to user_path(@user.id) do %>
                      <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
                      <br/><%= @book.title %>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to "" do %>
                      <%= @book.title %>
                    <% end %>
                  </td>
                  <td>
                    <%= @book.body %>
                  </td>
                  <% if @book.user_id == current_user.id %>
                    <td>
                      <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success edit_book_36200" %>
                    </td>
                    <td>
                      <%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-sm btn-danger destroy_book_36200"%>
                    </td>
                  <% end %>
                </tr>
            </tbody>
          </table>
        </div>

    </div>
  </div>
</main>