<main>
  <div class="container px-5 px-sm-0">
      <!--エラーメッセージ表示欄-->
        <% if @book.errors.any? %>
          <div class="error_explanation">
            <h3><%= @book.errors.count %> error prohibited this obj from being saved</h3>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%=message %></li>
              <% end %>
            </ul>
        </div>
      <% end %>
      <!--ここまで-->
    <div class="row">
      <!--部分テンプレート-->
      <%= render 'users/info', user: @user, book: @book %>
      <!--ここまで-->
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |b| %>
              <tr>
                <td>
                  <%= link_to book_path(b.id) do %>
                    <%= attachment_image_tag b.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40'  %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(b.id) do %>
                    <%= b.title %>
                  <% end %>
                </td>
                <td><%= b.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>